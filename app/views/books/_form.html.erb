<%= form_with(model: book, local: true) do |form| %>
  <% if book.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(book.errors.count, "error") %> prohibited this book from being saved:</h2>

      <ul>
        <% book.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label 'Book name' %>
    <%= form.text_field :title %>
  </div>

  <div class="field">
    <%= form.label :price %>
    <%= form.number_field :price %>
  </div>

  <div class="field">
    <%= form.label 'Author' %>
    <%= form.text_field :publish %>
  </div>

  <div class="field">
    <%= form.label :published %>
    <%= form.date_field :published %>
  </div>

  <label><%= form.radio_button :genre, 'Fantasy' , class: :rd %> Fantasy</label>
  <label><%= form.radio_button :genre, 'Real Story' , class: :rd %> Real Story</label>
  <label><%= form.radio_button :genre, 'Life Based' , class: :rd %> Life Based</label>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
